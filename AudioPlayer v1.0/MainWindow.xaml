<Window x:Class="AudioPlayer_v1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer_v1._0"
        mc:Ignorable="d"
        Title="AudioPlayer v1.0" Height="650" Width="1100" BorderThickness="0" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF578A94">

   
    <Grid Name="mainGrid" >

        <Grid Name="PlaylistContainer" HorizontalAlignment="Left" Height="545" Margin="230,0,-0.4,0" VerticalAlignment="Top" Width="864">

            <Grid Name="currentplaylist_container" Margin="0,65,0,0" >
                <Image Source="D:\Картинки. Фото\s1PWy54wveU.jpg" />

                <DataGrid x:Name="currentplaylist_datagrid" HorizontalAlignment="Left" 
                  VerticalAlignment="Top" Height="480" AutoGenerateColumns="False"
                  FontFamily="Calibri" SelectionChanged="currentplaylist_datagrid_SelectionChanged" Opacity="0.86" Margin="0,0,0,-0.2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Width="4*" 
                             Binding="{Binding Path=SongName}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Автор"  Width="4*"
                             Binding="{Binding Path=Author}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Длительность"  Width="4*"
                             Binding="{Binding Time,StringFormat=mm\\:ss}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Альбом" Width="4*"
                             Binding="{Binding Path=Album}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>

            <StackPanel HorizontalAlignment="Left" Height="51" VerticalAlignment="Top" Width="864" Orientation="Horizontal">
                <Button x:Name="button" Content="Button" Width="75" Click="button_Click"/>
                      
                <Button x:Name="addplaylist_button" Content="Добавить плелист" HorizontalAlignment="Left" 
                        Margin="8,22,0,0" VerticalAlignment="Top" Width="120" Click="addplaylist_button_Click"/>
                
                <TextBox x:Name="textBox" HorizontalAlignment="Left"  Height="23" Margin="20,22,0,0" 
                         TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="249" />
                
                <Button x:Name="playlistsearch_button" Content="Найти" HorizontalAlignment="Left" 
                        Margin="20,20,0,0" VerticalAlignment="Top" Width="50" Height="23"/>

                <Expander HorizontalAlignment="Left" Margin="20,22,0,-18.8"  Width="200" Height="200">
                    <ListBox Name="PlaylistsList" Width="200" Height="200">
                    </ListBox>
                </Expander>

                <Button x:Name="addtracktocurentplaylist_button" Content="Button" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="27" Height="26" Click="addtracktocurentplaylist_button_Click"/>
                <Button x:Name="deletetrackfromcurentplaylist_button" Content="Button" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="27" Height="26"/>

            </StackPanel>

        </Grid>
        <Grid Name="ControlContainer" HorizontalAlignment="Left" Height="75" Margin="0,545,-0.4,0" VerticalAlignment="Top" Width="1094">
            <ToggleButton x:Name="mute"  HorizontalAlignment="Left" Margin="865,23,0,0"  Background="#FF578A94" BorderBrush="#FF578A94" 
                    VerticalAlignment="Top" Width="26" Height="25" Click="prevTrack_Click" Opacity="0.8" Checked="mute_Checked" Unchecked="unmute">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\mute-volume-interface-symbol.png"/>

            </ToggleButton>
            <Button x:Name="prevTrack_button"  HorizontalAlignment="Left" Margin="75,25,0,0"  Background="#FF578A94" BorderBrush="#FF578A94" 
                    VerticalAlignment="Top" Width="26" Height="25" Click="prevTrack_Click" Opacity="0.8">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\rewind.png"/>
            </Button>
            <Button x:Name="playpause_button"  HorizontalAlignment="Left" Margin="115,15,0,0" VerticalAlignment="Top" 
                    Background="#FF578A94" BorderBrush="#FF578A94" Width="38" Height="40"  Opacity="0.8" Click="playpause_Click">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\play-button.png"/>
            </Button>
            <Button x:Name="nexttrack_button"  Background="#FF578A94" BorderBrush="#FF578A94" HorizontalAlignment="Left" Margin="170,25,0,0"
                    VerticalAlignment="Top" Width="25" Height="25"  Opacity="0.8" Click="nexttrack_button_Click">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\fast-forward.png" HorizontalAlignment="Left" RenderTransformOrigin="1,0" Height="20" Width="25"/>
            </Button>
            <Button x:Name="stop_button"  Background="#FF578A94" BorderBrush="#FF578A94"  HorizontalAlignment="Left" Margin="250,25,0,0" 
                    VerticalAlignment="Top" Width="25" Height="25"  Opacity="0.8" Click="stop_button_Click">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\stop.png" Height="20" Width="22" />

            </Button>
            <Button x:Name="firsttrack_button" Background="#FF578A94" BorderBrush="#FF578A94"  HorizontalAlignment="Left" Margin="35,25,0,0" 
                    VerticalAlignment="Top" Width="26" Height="25" Opacity="0.8" Click="firsttrack_button_Click">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\back.png" Height="20" Width="22" />
            </Button>
            <Button x:Name="finishtrack"  HorizontalAlignment="Left" Background="#FF578A94" BorderBrush="#FF578A94" Margin="209,25,0,0" 
    VerticalAlignment="Top" Width="26" Height="25" Opacity="0.8" Click="finishtrack_Click">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\next-1.png" Height="20" Width="22" />

            </Button>



            <Slider Name="PlaySlider"  Minimum="0" 
    VerticalAlignment="Center"  Height="23" RenderTransformOrigin="0.5,0.5"  Margin="330,25,264,27" ValueChanged="PlaySlider_ValueChanged" />

   <TextBlock Name="curenttime_textblock" Text="{Binding Time, StringFormat={}{0:hh}:{0:mm}:{0:ss}, 
    FallbackValue=00:00:00, Mode=OneWay}"  Padding="0,0,0,0" VerticalAlignment="Center"  Height="16" Margin="330,9,718,50" />
            <TextBlock Name="alltime_textbox" Text="{Binding Time, StringFormat={}{0:hh}:{0:mm}:{0:ss}, 
    FallbackValue=00:00:00, Mode=OneWay}" VerticalAlignment="Center"  Height="16" Margin="784,9,264,50" />
            <Slider x:Name="volume" HorizontalAlignment="Left" Margin="900,25,0,0" VerticalAlignment="Top"
                    Height="33" Width="110" ValueChanged="volume_ValueChanged" Maximum="1">



            </Slider>

            <Button x:Name="mix_button"  HorizontalAlignment="Left" Margin="1015,25,0,0" VerticalAlignment="Top" Width="25"  Background="#FF578A94" BorderBrush="#FF578A94"   Opacity="0.8" Click="mix_button_Click">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\replay.png" Height="22" Width="22" />
            </Button>

            <Button x:Name="replay_button"  HorizontalAlignment="Left" Margin="1045,24,0,0" VerticalAlignment="Top" Width="24"  Background="#FF578A94" BorderBrush="#FF578A94"   Opacity="0.8" Click="replay_button_Click">
                <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\shuff.png" Height="22"  Width="21"  />
            </Button>

        </Grid>

        <Grid Name="MenuContainer" Margin="0,0,864,75">
            <TabControl  Margin="2,545,-308.4,-229">
                <TabControl.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="-90"/>
                    </TransformGroup>

                </TabControl.RenderTransform>
                <TabItem Width="45" Height="30"  Margin="388,0,-390,0"  Background="#FF578A94" BorderBrush="#FF578A94"  Opacity="0.8">
                    <TabItem.Header>
                        <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\world.png"/>
                    </TabItem.Header>
                    <Grid Margin="-3,-3,-2.6,-2.8" >

                    </Grid>
                </TabItem>
                <TabItem Width="45" Height="30"  Margin="388,0,-390,0"  Background="#FF578A94" BorderBrush="#FF578A94" Opacity="0.8">
                    <TabItem.Header>
                        <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\magnifier.png"/>
                    </TabItem.Header>
                    <Grid Margin="-3,-3,-2.6,-2.8" >
                     
                    </Grid>
                </TabItem>
                <TabItem Width="45" Height="30"  Margin="388,0,-390,0"  Background="#FF578A94" BorderBrush="#FF578A94"  Opacity="0.8">
                    <TabItem.Header>
                        <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\menu.png"/>
                    </TabItem.Header>
                    <Grid Margin="-3,-3,-2.6,-2.8" >
                        
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>



    </Grid>
</Window>
