<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer_v1._0"
        xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" x:Class="AudioPlayer_v1._0.MainWindow"
        mc:Ignorable="d"
        Title="AudioPlayer v1.0"   MinHeight="400"  MinWidth="630" Height="580" Width="950" BorderThickness="0" WindowStartupLocation="CenterScreen" Background="#FF578A94">

    <Window.Resources>


        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Name="Panel">
                            <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                <ContentPresenter x:Name="ContentSite" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center" 
                                    ContentSource="Header" 
                                    Margin="10,2"/>
                            </Border>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightGreen"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#3F51B5" />

                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightBlue"/>

                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>



    <Grid x:Name="mainGrid" Background="#3F51B5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>


        <Grid x:Name="currentplaylist_container" Grid.Row="1" Grid.Column="1"  >
            <Image Name="Image_backgroundtrackimage"  Stretch="Fill"
                       Source="D:\Картинки. Фото\КАРТИНКИ\обои\14263801045630.jpg" />

            <DataGrid x:Name="currentplaylist_datagrid" AutoGenerateColumns="False" AllowDrop="True"
                  FontFamily="Calibri" SelectionChanged="currentplaylist_datagrid_SelectionChanged"  SelectedCellsChanged="currentplaylist_datagrid_SelectedCellsChanged"
                          Opacity="0.86"  Grid.Row="1" Grid.Column="1" DragDrop.Drop="currentplaylist_datagrid_Drop" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Width="4*" 
                             Binding="{Binding trackinfo.SongName}"/>
                    <DataGridTextColumn Header="Автор"  Width="4*"
                             Binding="{Binding trackinfo.Author}"/>
                    <DataGridTextColumn Header="Длительность"  Width="4*"
                             Binding="{Binding trackinfo.Time, StringFormat=mm\\:ss}"/>
                    <DataGridTextColumn Header="Альбом" Width="4*"
                             Binding="{Binding trackinfo.Album}"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>



        <Grid Grid.Row="1" Grid.Column="2" Background="#3F51B5">
            <ListBox x:Name="listBox_playlists" Background="#FF578A94" Opacity="0.7" SelectionChanged="listBox_SelectionChanged"/>

        </Grid>




        <Grid Grid.Row="0" Grid.Column="2" Background="#3F51B5">
            <Button x:Name="addplaylist_button" Content="Добавить"  Height="27" Padding="0" 
                        Click="addplaylist_button_Click"  />
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1"  Background="#3F51B5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="14*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="deletetrackfromcurentplaylist_button" Margin="0,0,10,0" Content="Button"
                         Width="27" Height="27" Padding="0" HorizontalAlignment="Right" Click="deletetrackfromcurentplaylist_button_Click"  />
                <Button x:Name="addtracktocurentplaylist_button" HorizontalAlignment="Right"  Margin="0,0,10,0" Content="Button"  
                         Width="27" Height="27" Padding="0" Click="addtracktocurentplaylist_button_Click" Grid.Column="1"/>

            </StackPanel>

            <Grid Grid.Row="0" Grid.Column="0">
                <Label x:Name="label_songname" Margin="0,0,0,10"  HorizontalContentAlignment="Center" VerticalContentAlignment="Top"
                   TextBlock.FontSize="20" Padding="0" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="298.847"/>

                <Label x:Name="label_authorname" Width="185" HorizontalAlignment="Left" Margin="10,33.707,0,25" Padding="0"
                   HorizontalContentAlignment="Left" VerticalContentAlignment="Top"/>
                <Label x:Name="label_album" Width="185"  HorizontalAlignment="Left" Margin="10,10,0,0" Padding="0" 
                    HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Height="23.707" VerticalAlignment="Top"/>

            </Grid>
        </Grid>


        <Grid x:Name="ControlContainer"   Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Background="#5C6BC0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1.7*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="41*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" >
                <Button x:Name="firsttrack_button"  Margin="140,0,0,0"  Width="27" Height="27"  Opacity="0.8" Click="firsttrack_button_Click" />
                <Button x:Name="prevTrack_button"  Margin="10,0,0,0" Width="27" Height="27"  Opacity="0.8"  Click="prevTrack_Click" />
                <Button x:Name="playpause_button"   Margin="10,0,0,0" Width="40" Height="40"  Opacity="0.8" Click="playpause_Click"/>
                <Button x:Name="nexttrack_button"  Margin="10,0,0,0"  Width="27" Height="27"  Opacity="0.8" Click="nexttrack_button_Click" />
                <Button x:Name="finishtrack"        Margin="10,0,0,0"  Width="27" Height="27" Opacity="0.8" Click="finishtrack_Click" />
                <Button x:Name="stop_button"        Margin="10,0,0,0" Height="27"  Width="27" Opacity="0.8" Click="stop_button_Click"  />

            </StackPanel>


            <StackPanel Grid.Row="0" Grid.Column="0">

                <TextBlock x:Name="alltime_textbox" Margin="0,5,0,0" Text="00:00/00:00" HorizontalAlignment="Right"
                       VerticalAlignment="Center"  Height="16"  Grid.Row="1" Grid.ColumnSpan="2"  />


                <Slider x:Name="PlaySlider" Margin="0,-5,0,0" IsMoveToPointEnabled="True" Minimum="0"  
                      ValueChanged="PlaySlider_ValueChanged"   />



            </StackPanel>


            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"  Orientation="Horizontal">

                <ToggleButton x:Name="button_mute" Margin="7,0,0,0"  Width="35"  Opacity="0.8" Checked="mute_Checked" Unchecked="unmute" />

                <Slider x:Name="volume"  Width="110" Margin="7,0,0,0"  VerticalAlignment="Center" ValueChanged="volume_ValueChanged" Maximum="1" />

                <ToggleButton x:Name="replay_button"   Margin="7,0,0,0"  VerticalAlignment="Center"
                          Width="35"  Background="#FF578A94" BorderBrush="#FF578A94"   Opacity="0.8" Checked="replay_button_Click" 
                          Unchecked="unreplay_button_Click">
                    <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\replay.png" Height="22"  Width="21"  />
                </ToggleButton>

            </StackPanel>


        </Grid>





        <Grid x:Name="MenuContainer" Grid.Column="0" Grid.Row="0" d:LayoutOverrides="HorizontalAlignment" Grid.RowSpan="2">
            <TabControl  Margin="0,0,10,0">
                <TabItem Width="45" Height="30">
                    <TabItem.Header>
                        <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\menu.png"/>
                    </TabItem.Header>
                    <Grid Margin="-3,-3,-2.6,-2.8" />
                </TabItem>
                
                <TabItem Width="45" Height="30">
                    <TabItem.Header>
                        <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\world.png"/>
                    </TabItem.Header>
                    <Grid>

                        <TextBox  x:Name="textbox_websearch" >

                        </TextBox>
                    </Grid>
                </TabItem>
                
                <TabItem Width="45" Height="30">
                    <TabItem.Header>
                        <Image Source="D:\БГТУ\КУРСОВОЙ ПРОЕКТ\AudioPlayer v1.0\AudioPlayer v1.0\resources\icons\magnifier.png"/>
                    </TabItem.Header>
                    <Grid Margin="-3,-3,-2.6,-2.8" />
                </TabItem>
                
            </TabControl>
        </Grid>



    </Grid>
</Window>
